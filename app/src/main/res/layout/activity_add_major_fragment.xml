<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMajorFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/design_top">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="در صورت نیاز گرایش جدید اضاف کنید"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/lalezar_font"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="2"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/majorName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@null"/>
            <TextView
                android:textDirection="rtl"
                android:text="نام گرایش:"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lalezar_font"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="2"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/listOfMajor"
                android:layout_width="0dp"
                android:gravity="start"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <TextView
                android:textDirection="rtl"
                android:text="گرایش:"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lalezar_font"/>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"></FrameLayout>
        <Button
            android:id="@+id/addMajor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:text="افزودن"
            android:background="@drawable/rounded_button_login"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/lalezar_font"
            />

    </LinearLayout>

</LinearLayout>