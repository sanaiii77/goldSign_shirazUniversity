<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/design_top">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="اطلاعات زیر را تکمیل کنید."
                android:textColor="@color/white"
                android:fontFamily="@font/lalezar_font"
                android:textSize="@dimen/_15sdp"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="1.5"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:fontFamily="@font/lalezar_font"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_13sdp"
                android:text="سال ورورد"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="3"
                android:layout_weight=".5"
                android:layoutDirection="rtl">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/lalezar_font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="روز"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/lalezar_font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="ماه"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/lalezar_font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="سال"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="3"
                android:layout_weight=".5">

                <Spinner
                    android:id="@+id/yearTimeTerm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    />

                <Spinner
                    android:id="@+id/monthTimeTerm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    />

                <Spinner
                    android:id="@+id/dayTimeTerm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="2"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/selectMajorForTerm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <TextView
                android:textDirection="rtl"
                android:text="گرایش"
                android:gravity="center"
                android:fontFamily="@font/lalezar_font"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_13sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="2"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/selectTermTimeForStudent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <TextView
                android:textDirection="rtl"
                android:text="بازه زمانی برای دانشجویان"
                android:gravity="center"
                android:fontFamily="@font/lalezar_font"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_13sdp"                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="2"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/selectTermTimeForteacher"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <TextView
                android:textDirection="rtl"
                android:text="بازه زمانی برای اساتید"
                android:gravity="center"
                android:fontFamily="@font/lalezar_font"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_13sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <Button
            android:id="@+id/addTerm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:text="افزودن ترم"
            android:background="@drawable/rounded_button_login"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:fontFamily="@font/lalezar_font"
            android:textSize="@dimen/_15sdp"
            />

    </LinearLayout>









    <android.support.v4.widget.NestedScrollView
        android:id="@+id/LLTeacher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="15dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:text="ظرفیت هر استاد را مشخص کنید ."
                    android:background="@drawable/design_top"/>
            </FrameLayout>


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listCapacityTechaers"
                android:divider="@android:color/transparent"
                android:overScrollMode="never"
                android:layout_margin="5dp"
                android:dividerHeight="10.0sp"
                android:nestedScrollingEnabled="false"
                >
            </android.support.v7.widget.RecyclerView>
            <Button
                android:id="@+id/saveTerm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="بعدی"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button_login"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>




</LinearLayout>