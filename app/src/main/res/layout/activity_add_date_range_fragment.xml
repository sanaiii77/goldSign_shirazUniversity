<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDateRangeFragment">

    <LinearLayout
        android:id="@+id/LLTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="6.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/design_top">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text=" قابلیت حذف و یا تغییر بعد از ثبت اطلاعات وجود ندارد ."
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/lalezar_font"/>

            </FrameLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="1.5"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:text="تاریخ شروع بازه زمانی"
                android:fontFamily="@font/lalezar_font"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colorPrimaryDark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="3"
                android:layout_weight=".5"
                android:layoutDirection="rtl">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="روز"
                    android:gravity="center"
                    android:fontFamily="@font/lalezar_font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ماه"
                    android:fontFamily="@font/lalezar_font"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="سال"
                    android:gravity="center"
                    android:fontFamily="@font/lalezar_font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="3"
                android:layout_weight=".5">

                <Spinner
                    android:id="@+id/shoroeZamanEntekhabStudent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    />

                <Spinner
                    android:id="@+id/shoroeZamanEntekhabStudent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    />

                <Spinner
                    android:id="@+id/shoroeZamanEntekhabStuden3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"

                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="1.5"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:text="تاریخ پابان بازه زمانی"
                android:fontFamily="@font/lalezar_font"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colorPrimaryDark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="3"
                android:layout_weight=".5"
                android:layoutDirection="rtl">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="روز"
                    android:gravity="center"
                    android:fontFamily="@font/lalezar_font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ماه"
                    android:gravity="center"
                    android:fontFamily="@font/lalezar_font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="سال"
                    android:gravity="center"
                    android:fontFamily="@font/lalezar_font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="3"
                android:layout_weight=".5">

                <Spinner
                    android:id="@+id/payanZamanEntekhabStudent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    />

                <Spinner
                    android:id="@+id/payanZamanEntekhabStudent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    />

                <Spinner
                    android:id="@+id/payanZamanEntekhabStudent3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/addNewDateRange"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:text="افزودن"
            android:background="@drawable/rounded_button_login"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/lalezar_font"
            android:layout_gravity="bottom"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>