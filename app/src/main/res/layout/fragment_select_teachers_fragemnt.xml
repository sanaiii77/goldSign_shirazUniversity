<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Student.SelectTeachersFragemnt"
    android:background="@color/colorPrimary">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/isAvailable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="7"
        android:backgroundTint="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/selectteacherRecycleview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_margin="20dp"
            android:layoutDirection="rtl">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_margin="2dp"
            android:layoutDirection="rtl">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_margin="2dp">
                <TextView
                    android:text="الویت"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/colorPrimarybackup"
                    android:fontFamily="@font/lalezar_font"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/priorityOfSelection"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimarybackup"
                    android:layout_margin="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_margin="2dp">
                <Spinner
                    android:id="@+id/teachersNameInSelection"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layoutDirection="ltr"
                    ></Spinner>

                <ImageButton
                    android:id="@+id/addPriority"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_add"
                    android:background="@color/white"
                    />

            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"            android:weightSum="2"
            android:layoutDirection="rtl"
            >
            <Button
                android:id="@+id/saveChoiceOfTeacher"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_login"
                android:text="ارسال"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:fontFamily="@font/lalezar_font"
                android:textSize="@dimen/_15sdp"/>
            <Button
                android:id="@+id/cancelChoiceOfTeacher"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_login"
                android:text="لغو"
                android:textColor="@color/white"
                android:fontFamily="@font/lalezar_font"
                android:textSize="@dimen/_15sdp"/>
        </LinearLayout>




    </LinearLayout>

    <FrameLayout
        android:id="@+id/selectionIsNotAvailable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_gravity="center"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimarybackup"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="انتخاب های شما :"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/textviewSelectionIsNotAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/colorPrimarybackup"
            />
    </FrameLayout>



</FrameLayout>