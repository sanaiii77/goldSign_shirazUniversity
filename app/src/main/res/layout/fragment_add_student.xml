<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddStudent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/design_top">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/lalezar_font"
                    android:textSize="@dimen/_13sdp"
                    android:text="اطلاعات دانشجو را وارد کنید."
                    android:textColor="@color/white"/>


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textDirection="rtl"
                    android:layout_gravity="right"
                    android:fontFamily="@font/lalezar_font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/white"
                    android:text="بعد از اطمینان از صحت اطلاعات،دکمه تائید را بزنید."/>
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نام:"
                android:fontFamily="@font/lalezar_font"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorPrimaryDark"                android:layout_marginRight="5dp"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/studentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textDirection="rtl"
                    android:fontFamily="@font/iran_sens_font"
                    android:background="@drawable/rounded_edittext"
                    />
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" نام خانودگی :"
                android:fontFamily="@font/lalezar_font"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorPrimaryDark"                android:layout_marginRight="5dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">
n
                <EditText
                    android:id="@+id/studentFamilyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textDirection="rtl"
                    android:fontFamily="@font/iran_sens_font"

                    android:background="@drawable/rounded_edittext"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="شماره دانشجویی :"
                android:fontFamily="@font/lalezar_font"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorPrimaryDark"                android:layout_marginRight="5dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/stdNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textDirection="rtl"
                    android:fontFamily="@font/iran_sens_font"
                    android:background="@drawable/rounded_edittext"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="امتیاز :"
                android:fontFamily="@font/lalezar_font"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorPrimaryDark"                android:layout_marginRight="5dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/stdscore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textDirection="rtl"
                    android:fontFamily="@font/iran_sens_font"
                    android:background="@drawable/rounded_edittext"
                    />
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ترم و گرایش :"
                android:fontFamily="@font/lalezar_font"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorPrimaryDark"                android:layout_marginRight="5dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    />
            </FrameLayout>

        </LinearLayout>


        <Button
            android:id="@+id/saveStd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:text="تائید"
            android:background="@drawable/rounded_button_login"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:fontFamily="@font/lalezar_font"
            android:textSize="@dimen/_15sdp"
            />


    </LinearLayout>

</FrameLayout>