<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layoutDirection="rtl"
            android:background="@drawable/rounded_edittext"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ترم"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/lalezar_font"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/termInCal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="date and major"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/lalezar_font"
                    android:textColor="@color/colorPrimaryDark"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/_14sdp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|right"
                    android:fontFamily="@font/lalezar_font"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="فرایند توسط دانشجویان"/>
                <TextView
                    android:id="@+id/stdTimeInCal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="date range by std"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"

                    android:fontFamily="@font/lalezar_font"
                    android:textColor="@color/colorPrimaryDark"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="3dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:text="فرایند توسط اساتید"
                    android:fontFamily="@font/lalezar_font"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|right"/>
                <TextView
                    android:id="@+id/teacherTimeInCal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="date range by teacher"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/lalezar_font"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>